<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Progress" parent="Widget.AppCompat.ProgressBar">

    </style>

    <style name="Progress.Horizontal">

    </style>

    <style name="TabTextAppearance" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>
